@using MyWebApp.Core.Model.ViewModels;
@using MyWebApp.Core.Utility;
@model LoginViewModel;
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <!-- Favicons -->
    <link href="~/img/favicon.png" rel="icon">
    <link href="~/img/apple-touch-icon.png" rel="apple-touch-icon">
    <!-- Vendor CSS Files -->
    <link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <!-- Template Main CSS File -->
    <link href="~/css/style.css" rel="stylesheet">
    <link href="~/css/progressbar.css" rel="stylesheet" />
  
    <title>Login</title>
</head>
<body style="background-color:black">
    <main>
        <div class="container">
            <section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center">
                            <div class="d-flex justify-content-center py-4">
                                <a href="index.html" class="logo d-flex align-items-center w-auto">
                                    <img src="~/img/logo.png" alt="">
                                    <span class="d-none d-lg-block" style="color:#4154f1">MyWebApp</span>
                                </a>
                            </div><!-- End Logo -->
                            <div class="card mb-3">
                                <div class="card-body">
                                    <div class="pt-4 pb-2">
                                        
                                    </div>
                                    <form class="row g-3 needs-validation" novalidate>
                                        <div class="col-12">
                                            <label asp-for="UserLogin"
                                                   class="form-label">
                                                UserName
                                            </label>
                                            <div class="input-group">
                                                <span class="input-group-text"
                                                      id="basic-addon1">
                                                    <i class="bi bi-person-circle"></i>
                                                </span>
                                                <input type="text"
                                                       asp-for="UserLogin"
                                                       class="form-control">
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <label asp-for="Password"
                                                   class="form-label">
                                                Password
                                            </label>
                                            <div class="input-group">
                                                <span class="input-group-text"
                                                      id="basic-addon1">
                                                    <i class="bi bi-key-fill"></i>
                                                </span>
                                                <input type="password"
                                                       asp-for="Password"
                                                       class="form-control" 
                                                       onchange="processLogin()">
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <div class="form-check">
                                                <input class="form-check-input"
                                                       type="checkbox"
                                                       name="remember"
                                                       value="true"
                                                       id="rememberMe">
                                                <label class="form-check-label"
                                                       for="rememberMe">
                                                    Remember
                                                </label>
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <button class="btn btn-primary w-100"
                                                    type="button"
                                                    onclick="processLogin()">
                                                Login
                                            </button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="overlay" id="idLoading"></div>
                <div class="popup" id="idLoader">
                    <partial name="_Loading" />
                </div>
            </section>
        </div>
    </main><!-- End #main -->
    @{
        await Html.RenderPartialAsync("_LoginScriptsPartial");
    }
</body>
</html>
